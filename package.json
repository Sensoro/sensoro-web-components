{
  "private": true,
  "scripts": {
    "start": "wireit",
    "make": "wireit",
    "make:react": "wireit",
    "make:style": "wireit",
    "make:metadata": "wireit",
    "make:metadata:watch": "pnpm make:metadata -- --watch",
    "build:react": "wireit",
    "prepare": "husky install"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@types/node": "^20.3.2",
    "@types/react": "^18.2.13",
    "@types/react-dom": "^18.2.6",
    "@umijs/utils": "^4.0.71",
    "command-line-args": "^5.2.1",
    "father": "^4.2.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "sensoro-scripts": "workspace:*",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-packagejson": "^2.4.3",
    "tsx": "^3.12.7",
    "@types/less": "^3.0.3",
    "less": "^4.1.3",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2",
    "wireit": "^0.9.5",
    "zx": "^7.2.2"
  },
  "wireit": {
    "start": {
      "command": "pnpm --parallel --filter docs start",
      "dependencies": [
        "make"
      ]
    },
    "make": {
      "dependencies": [
        "make:react"
      ]
    },
    "make:react": {
      "command": "sensoro-scripts make-react",
      "dependencies": [
        "make:style",
        "make:metadata"
      ]
    },
    "make:metadata": {
      "command": "pnpm --parallel --filter @sensoro-design/web-components metadata",
      "files": [
        "./packages/web-comppnents/src/**/*.ts"
      ],
      "output": [
        "./packages/web-comppnents/custom-elements.json"
      ]
    },
    "make:style": {
      "command": "sensoro-scripts mark-style",
      "files": [
        "./packages/web-comppnents/src/components/**/style/*.less"
      ],
      "output": [
        "./packages/web-comppnents/src/components/**/style/*.css",
        "./packages/web-comppnents/src/components/**/style/*.ts"
      ]
    },
    "build:react": {
      "dependencies": [
        "./packages/react:build"
      ]
    }
  }
}
